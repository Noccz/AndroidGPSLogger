<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="Start"
        android:id="@+id/start_stop_button"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"/>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:format="@string/chronometer_initial_format"
        android:textSize="45sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Logging Off"
        android:id="@+id/loggingStatusTextView"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:onClick="resetApp"
        android:layout_alignTop="@+id/start_stop_button"
        android:layout_toRightOf="@+id/start_stop_button"
        android:layout_alignBottom="@+id/start_stop_button"
        android:layout_marginLeft="50dp"/>


</RelativeLayout>
